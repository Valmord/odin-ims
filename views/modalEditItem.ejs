<dialog id="edit-item-modal">
  <h2>Add New <%= title %></h2>
  <form action="/item/update/<%= cat_name %>" method="put">
    <label for="item-name">Item Name</label>
    <input
      type="text"
      id="item-name"
      name="item-name"
      maxlength="255"
      minlength="1"
      placeholder="<%= item.name %>"
      value="<%= item.name %>"
      required
    />

    <label for="item-description">Description</label>
    <textarea
      name="item-description"
      id="item-description"
      placeholder="<%= item.description %>"
      required
    >
<%= item.description %></textarea
    >

    <label for="item-price">Price</label>
    <input
      type="number"
      name="item-price"
      id="item-price"
      placeholder="<%= item.price %>"
      value="<%= item.price %>"
      min="0"
      required
    />

    <label for="item-stock">Total stocked</label>
    <input
      type="number"
      name="item-stock"
      id="item-stock"
      placeholder="<%= item.stock %>"
      value="<%= item.stock %>"
      min="0"
      required
    />

    <div class="btn-container">
      <button type="submit">Add Category</button>
      <button type="button" id="delete-item" data-item-index="<%= item.id %>">
        Delete Item
      </button>
      <button type="button" id="close-modal">Cancel</button>
    </div>
  </form>
</dialog>
